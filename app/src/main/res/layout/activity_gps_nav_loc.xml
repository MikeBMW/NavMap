    <!-- 右上角垂直居中 -->
    <LinearLayout
        android:id="@+id/right_center_panel"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:background="#80000000">

        <TextView
            android:id="@+id/tv_location_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位..."
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/et_destination"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:textSize="17sp"
            android:hint="目的地"/>

        <Button
            android:id="@+id/btn_confirm_destination"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="导航"
            android:textSize="17sp"/>
    </LinearLayout>
    <!-- 左侧按钮组，垂直排列 -->
    <LinearLayout
        android:id="@+id/left_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/right_center_panel"
        android:layout_alignTop="@id/right_center_panel"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#80000000">

        <!-- ===== 新增：IP+端口输入栏（放在同一个 LinearLayout 里）===== -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="#80000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="J6E域控："
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/et_ip_port"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:textSize="15sp"
                android:text="192.168.1.30:54330"
                android:inputType="textUri"
                android:background="#FFFFFF"
                android:padding="4dp"
                android:textColorHint="#BDBDBD"
                android:textColor="#212121"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接"
            android:textSize="17sp"/>

<!--        <Button-->
