    <!-- 右上角垂直居中 -->
    <LinearLayout
        android:id="@+id/right_center_panel"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:background="#80000000">

        <TextView
            android:id="@+id/tv_location_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位..."
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/et_destination"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:textSize="17sp"
            android:hint="目的地"/>

        <Button
            android:id="@+id/btn_confirm_destination"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="导航"
            android:textSize="17sp"/>
    </LinearLayout>
    <!-- 左侧按钮组，垂直排列 -->
    <LinearLayout
        android:id="@+id/left_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/right_center_panel"
        android:layout_alignTop="@id/right_center_panel"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#80000000">

        <!-- ===== 新增：IP+端口输入栏（放在同一个 LinearLayout 里）===== -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="#80000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="J6E域控："
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/et_ip_port"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:textSize="15sp"
                android:text="192.168.1.30:54330"
                android:inputType="textUri"
                android:background="#FFFFFF"
                android:padding="4dp"
                android:textColorHint="#BDBDBD"
                android:textColor="#212121"/>
        </LinearLayout>

        <!-- 按钮行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 连接按钮 -->
            <Button
                android:id="@+id/btn_connect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="连接"
                android:textSize="17sp" />

            <!-- 选项按钮 -->
            <Button
                android:id="@+id/btn_options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="选项" />
        </LinearLayout>
    </LinearLayout>

    <!-- 调试面板 -->
    <LinearLayout
        android:id="@+id/debug_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="2dp"
        android:background="#EE000000"
        android:visibility="gone">

        <!-- 标题栏：点一下折叠/展开 -->
<!--        <TextView-->
<!--            android:id="@+id/debug_title"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="调试信息（点我折叠）"-->
<!--            android:textColor="#FFF"-->
<!--            android:textStyle="bold"-->
<!--            android:padding="0dp" />-->

        <TextView
            android:id="@+id/debug_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="调试信息（点我折叠）"
            android:textColor="#DD000000"
            android:textStyle="bold"
            android:textSize="10sp"
            android:lineHeight="11dp"
            android:paddingVertical="0dp"
            android:gravity="center_vertical"
            android:background="#80FFFFFF"/>

        <!-- 16 进制串 -->
        <TextView
            android:id="@+id/debug_hex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0F0"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:padding="2dp" />

        <!-- 关键字段 -->
        <TextView
            android:id="@+id/debug_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:padding="2dp" />
    </LinearLayout>

