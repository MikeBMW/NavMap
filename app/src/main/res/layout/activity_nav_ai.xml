<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 顶部控制面板 - 默认隐藏，点击后从上方滑下 -->
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0000000"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_alignParentTop="true">

        <!-- 面板标题栏 -->
        <TextView
            android:id="@+id/control_panel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="控制面板（点我隐藏）"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="#40000000"
            android:gravity="center" />

        <!-- 内容区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- 左侧：位置和天气信息 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 位置信息 -->
                <TextView
                    android:id="@+id/tv_location_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="正在获取位置..."
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:padding="4dp" />

                <!-- 速度信息 -->
                <TextView
                    android:id="@+id/tv_speed_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="速度: 0 km/h"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="4dp" />

                <!-- 天气信息 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_weather_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_weather_sunny" />

                    <TextView
                        android:id="@+id/tv_weather_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25°C"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp" />

                    <TextView
                        android:id="@+id/tv_weather_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="晴"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- 右侧：输入和按钮 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <!-- 目的地输入 -->
                <EditText
                    android:id="@+id/et_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入目的地"
                    android:textSize="12sp"
                    android:background="#FFFFFF"
                    android:padding="4dp"
                    android:textColor="#000000" />

                <!-- WebSocket连接设置 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="J6E域控:"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:id="@+id/et_ip_port"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:text="192.168.1.30:54330"
                        android:background="#FFFFFF"
                        android:padding="4dp"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <!-- 按钮行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btn_confirm_destination"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="开始导航"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btn_connect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="连接"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 底部调试面板 - 保留原有样式和交互 -->
    <LinearLayout
        android:id="@+id/debug_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="2dp"
        android:background="#EE000000"
        android:visibility="gone">

        <TextView
            android:id="@+id/debug_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="调试信息（点我折叠）"
            android:textColor="#DD000000"
            android:textStyle="bold"
            android:textSize="10sp"
            android:lineHeight="11dp"
            android:paddingVertical="0dp"
            android:gravity="center_vertical"
            android:background="#80FFFFFF"/>

        <!-- 16 进制串 -->
        <TextView
            android:id="@+id/debug_hex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0F0"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:padding="2dp" />

        <!-- 关键字段 -->
        <TextView
            android:id="@+id/debug_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:padding="2dp" />

    </LinearLayout>

    <!-- 悬浮按钮：显示控制面板 -->
    <Button
        android:id="@+id/btn_show_control_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控制面板"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="#80000000"
        android:textColor="#FFFFFF" />

    <!-- 悬浮按钮：显示调试面板 -->
    <Button
        android:id="@+id/btn_show_debug_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="调试信息"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="#80000000"
        android:textColor="#FFFFFF" />

</RelativeLayout>


